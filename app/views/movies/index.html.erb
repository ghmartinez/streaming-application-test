<h1>Movies</h1>

<p>
  Sort by:
  <%= link_to "Newest", movies_path(sort: "newest") %>
  <%= link_to "Oldest", movies_path(sort: "oldest") %>
</p>

<div class="row">
  <% @movies.each_with_index do |movie, index| %>
    <div class="col-lg-3 col-md-6">
      <%= link_to movie_path(movie) do %>
        <div class="content">
          <h2><%= index + 1 %>. <%= movie.title %></h2>
          <p><%= movie.plot %></p>
          <p>Creation: <%= movie.created_at.strftime("%d/%m/%Y %H:%M:%S") %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
