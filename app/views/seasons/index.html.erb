<h1>Seasons</h1>

<p>
  Sort by:
  <%= link_to "Newest", seasons_path(sort: "newest") %>
  <%= link_to "Oldest", seasons_path(sort: "oldest") %>
</p>

<div class="row">
  <% @seasons.each_with_index do |seasons, index| %>
    <div class="col-lg-3 col-md-6">
      <%= link_to seasons_path(seasons) do %>
        <div class="movie">
          <h2><%= index + 1 %>. <%= season.title %></h2>
          <p><%= season.plot %></p>
          <p><%= season.created_at.strftime("%d/%m/%Y %H:%M:%S") %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
